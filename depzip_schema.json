{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "depzip manifest",
  "type": "object",
  "description": "JSON file listing all desired packages",
  "properties": {
    "packages": {
      "type": "array",
      "description": "Array of packages",
      "items": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
            "description": "Repository sub-URI, eg octocat/Hello-World"
          },
          "branch": {
            "type": "string",
            "description": "git commit-ish to checkout (optional)"
          },
          "subdir": {
            "type": "string",
            "description": "Custom subdirectory name (optional)"
          },
          "remove_subpaths": {
            "type": "array",
            "description": "Subpaths to remove after checkout (optional)",
            "items": {
              "type": "string"
            }
          },
          "custom_command": {
            "type": "string",
            "description": "Custom shell command(s) to run, eg 'cmake -P script.cmake' (optional)"
          }
        },
        "required": [
          "uri"
        ]
      },
      "minItems": 1
    },
    "host": {
      "type": "string",
      "description": "Default repository host URL, eg https://github.com (optional)",
      "default": "https://github.com"
    }
  },
  "required": [
    "packages"
  ]
}